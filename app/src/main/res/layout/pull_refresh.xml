<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <com.zz.pullrefreshdemo.PullFirstView
        android:id="@+id/pull_refresh_first_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/pull_refresh_second_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/refreshing_image_frame_05"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/pull_refresh_third_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/refresh_to_end_anim"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/pull_refresh_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="下拉刷新"/>
</LinearLayout>