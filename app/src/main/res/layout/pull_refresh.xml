<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="horizontal">

    <com.zz.pullrefreshdemo.PullFirstView
        android:id="@+id/pull_refresh_first_view"
        android:layout_width="45dp"
        android:layout_margin="10dp"
        android:layout_height="45dp"/>

    <com.zz.pullrefreshdemo.PullSecondView
        android:id="@+id/pull_refresh_second_view"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:visibility="gone"/>

    <com.zz.pullrefreshdemo.PullThirdView
        android:id="@+id/pull_refresh_third_view"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/pull_refresh_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="下拉刷新"/>
</LinearLayout>